<display id="kir.session" type="" style="Table" enable="true">
	<name><![CDATA[gv$session]]></name>
	<description><![CDATA[]]></description>
	<tooltip><![CDATA[]]></tooltip>
	<drillclass><![CDATA[]]></drillclass>
	<CustomValues>
		<TYPE><![CDATA[horizontal]]></TYPE>
	</CustomValues>
	<query>
		<sql><![CDATA[select
    s.inst_id,
    s.sid,
    s.serial#,
    s.audsid,
    s.service_name,
    --
    s.logon_time,
    s.status,
    s.last_call_et,
    --
    s.username,
    s.schemaname,
    s.osuser,
    s.process,
    s.machine,
    s.program,
    s.type,
    s.action,
    s.module,
    s.client_info,
    --
    s.sql_id,
    s.sql_exec_id,
    s.sql_exec_start,
    s.sql_child_number,
    --
    s.blocking_instance,
    s.blocking_session,
    s.blocking_session_status,
    --
    s.event,
    s.wait_class,
    s.wait_time,
    s.seconds_in_wait,
    p.tracefile
from gv$session s
join gv$process p on 1 = 1
    and p.addr = s.paddr
    and p.inst_id = s.inst_id
where 1 = 1
    and s.ownerid = 2147483644 -- no PX slaves
    and s.type != 'BACKGROUND'
order by
    decode(s.sql_id, null, 1, 0),
    s.inst_id,
    s.sid,
    s.serial#]]></sql>
	</query>
